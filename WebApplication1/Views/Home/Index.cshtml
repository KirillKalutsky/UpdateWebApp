@model List<string>
@{
    ViewData["Title"] = "Crime Analysis";
}

<div id="header" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <div class="top">
        <div id="content_item">
            <h1 class="header1 districtName"></h1>
        </div>

        <div id="content_entry">

            <div id="show_btn">
                <h4 onclick="openNav()">Развернуть →</h4>
            </div>
            <h3 class="header1">Список происшествий</h3>
            @*<input class="form-control" type="text" placeholder="Тип инцидента" id="search-text" onkeyup="searchTypeIncident()">*@
        <div id="filters">
            <input type="date" id="startDate">
            <input type="date" id="finishDate">
            @Html.DropDownList("a", new SelectList(Model), "Все", new { @id = "search-text" })
            <input type="button" onclick="sortTable()" class="searchButton" value="искать">
        </div>
            
            <table class="districtEvents" id="info-table">
            </table>


        </div>
    </div>
</div>

<!-- Main -->
<div id="main">

    <div class="map-image">
        <img src="/RedZone/images/Ekb_all_districts_2-01.jpg" style="display: block; width: 100%;" alt="" />
        <!--					Железнодорожный-->
        <a onclick="openDistrict('железнодорожный')" style="top: 22%; left: 35%; "><div class="circle"><div id="jel" class="numb"></div></div></a>
