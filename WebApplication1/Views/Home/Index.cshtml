        <a onclick="openDistrict('орджоникидзевский')" style="top: 17.5%; left: 60.1%; "><div class="circle"><div id="ord" class="numb"></div></div></a>
        <!--					Кировский-->
        <a onclick="openDistrict('кировский')" style="top: 36%; left: 69%; "><div class="circle" ><div id="kir" class="numb"></div></div></a>
        <!--					Октябрьский-->
        <a onclick="openDistrict('октябрьский')" style="top: 55%; left: 69%; "><div class="circle" ><div id="okt" class="numb"></div></div></a>
        <!--					Чкаловский-->
        <a onclick="openDistrict('чкаловский')" style="top: 74%; left: 52%; "><div class="circle" ><div id="chk" class="numb"></div></div></a>
        <!--					Ленинский-->
        <a onclick="openDistrict('ленинский')" style="top: 54%; left: 49%; "><div class="circle" ><div id="len" class="numb"></div></div></a>
        <!--					Верх-Исетский-->
        <a onclick="openDistrict('верх-исетский')" style="top: 46%; left: 37%; "><div class="circle" ><div id="ver" class="numb"></div></div></a>
        <!--					Академический-->
        <a onclick="openDistrict('академический')" style="top: 65%; left: 24%; "><div class="circle" ><div id="aka" class="numb"></div></div></a>

        <a class="other" onclick="openDistrict('не определенный')" style="top: 2.5%; left: 90%; "><div class="circle"><div id="oth" class="numb"></div></div></a>

    </div>
</div>
